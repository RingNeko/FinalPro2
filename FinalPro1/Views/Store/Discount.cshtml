@model IEnumerable<FinalPro1.Models.Discount>

@{
    ViewData["Title"] = "好康優惠";
}
<h1>好康優惠</h1>
<p>
    <a asp-action="Create" class="btn btn-success">新增活動</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>活動代號</th>
            <th>活動名稱</th>
            <th>活動開始時間</th>
            <th>活動結束時間</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DIS_ID)</td>
                <td>@Html.DisplayFor(modelItem => item.DIS_NAME)</td>
                <td>@Html.DisplayFor(modelItem => item.DIS_START)</td>
                <td>@Html.DisplayFor(modelItem => item.DIS_END)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DIS_ID" class="btn btn-primary">修改活動</a>
                    <a asp-action="Delete" asp-route-id="@item.DIS_ID" class="btn btn-danger">刪除活動</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Account" asp-action="Logout" class="btn btn-primary">登出</a>
<button class="btn btn-success" onclick="location.href='@Url.Action("Index", "Store")'">回首頁</button>
