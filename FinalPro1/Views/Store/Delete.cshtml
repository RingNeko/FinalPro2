@model FinalPro1.Models.Discount

@{
    ViewData["Title"] = "Delete";
}


<h1>Delete</h1>

<h3>真的要刪除嗎？</h3>
<div>
    <h4>Discount</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            活動名稱
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DIS_NAME)
        </dd>
        <dt class = "col-sm-2">
            開始時間
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DIS_START)
        </dd>
        <dt class = "col-sm-2">
            結束時間
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DIS_END)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DIS_ID" />
        <input type="submit" value="刪除" class="btn btn-danger" /> |
    </form>
</div>
<br />
<button class="btn btn-info" onclick="location.href='@Url.Action("Discount", "Store")'">回上頁</button>
